[MESSAGES CONTROL]
# C0103 - Invalid name "%s" (should match %s)
# F0401 - Unable to import 'module'
# W0142 - Used * or ** magic (This doesn't improve readability and should be used with care.)
# R0913 - Too many arguments
# W0702 - No exception type
disable=C0103,F0401,W0142,R0913,W0702

[REPORTS]
# set the output format. Available formats are text, parseable, colorized and
# html
output-format=colorized

# Include message's id in output
msg-template={msg_id}:{line:3d},{column}: {obj}: {msg}

[MISCELLANEOUS]

# List of note tags to take in consideration, separated by a comma.
# FIXME -- something which needs fixing
# TODO  -- future plan
# XXX   -- some concern
# YYY   -- comment/answer to above mentioned concern
notes=FIXME,TODO,XXX,YYY
